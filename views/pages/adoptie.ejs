<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adoptie - PurrfectMatch</title>
    <link rel="stylesheet" href="style.css" />
    <script src="https://kit.fontawesome.com/fee5056558.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main>
      <section class="filterensorteren">
        <div>
          <p>19 dieren</p>
          <form id="sorteerFormulier">
            <select id="sorteerModus" name="sorteerModus">
              <option value="relevant">Relevant</option>
              <option value="jongOud">Jong naar Oud</option>
              <option value="oudJong">Oud naar Jong</option>
              <option value="lichtZwaar">Licht naar Zwaar</option>
              <option value="zwaarLicht">Zwaar naar Licht</option>
            </select>
          </form>
        </div>
        <button id="filterBtn"><i class="fa-solid fa-filter"></i>Filters</button>
        <section class="filter">
          <form>
            <h3>Diersoort</h3>
            <input type="checkbox" id="checkleeuw" name="diersoort" value="leeuw" />
            <label for="checkleeuw">Leeuw</label>
            <br />
            <input type="checkbox" id="checktijger" name="diersoort" value="tijger" />
            <label for="checktijger">Tijger</label>
            <br />
            <input type="checkbox" id="checkcheetah" name="diersoort" value="cheetah" />
            <label for="checkcheetah">Cheetah</label>
            <br />
            <input type="checkbox" id="checkjaguar" name="diersoort" value="jaguar" />
            <label for="checkjaguar">Jaguar</label>
            <br />
            <input type="checkbox" id="checklynx" name="diersoort" value="lynx" />
            <label for="checklynx">Lynx</label>
            <br />
            <input type="checkbox" id="checkpoema" name="diersoort" value="poema" />
            <label for="checkpoema">Poema</label>
            <br />
            <input type="checkbox" id="checkserval" name="diersoort" value="serval" />
            <label for="checkserval">Serval</label>
            <br />
            <h3>Geslacht</h3>
            <input type="checkbox" id="checkman" name="geslacht" value="man" />
            <label for="checkman">Man</label>
            <br />
            <input type="checkbox" id="checkvrouw" name="geslacht" value="vrouw" />
            <label for="checkvrouw">Vrouw</label>
            <br />
            <input class="submitfilter" type="submit" value="Aanpassen" />
          </form>
        </section>
      </section>
      <section>
        <ul class="overzicht">
          <% dieren.forEach(function(dier) { %>
          <li>
            <a href="/adoptie/<%= dier.naam %>?id=<%= dier._id %>" aria-label="Ga naar dit dier">
              <img src="/uploads/<%= dier.foto %>" alt="Foto van <%= dier.naam %>" />
              <div>
                <h2><%= dier.naam %></h2>
                <h4><%= dier.geslacht %></h4>
                <h5><%= dier.leeftijd %></h5>
                <h6><%= dier.gewicht %></h6>
                <p><%= dier.omschrijving %></p>
              </div>
              <i class="fa-solid fa-pen"></i>
              <% if (user) { %>
              <form action="like" method="post" id="likeForm">
                <input type="hidden" name="dier" value="<%= dier._id %>" />
                <input type="hidden" name="user" value="<%= user.id %>" />
                <button id="likeButton" type="submit" class="<% if (likedIds.includes(dier._id.toString())) { %>liked<% } %>"><%= dier.likes %> ❤️</button>
              </form>
              <% } %>
            </a>
          </li>
          <% }); %>
        </ul>
      </section>
    </main>
    <script src="script/script.js"></script>
  </body>
</html>
