      </div>
      <div class="formcontainer">
        <div class="formcontainer-container registreergap">
          <h2>Afstandformulier</h1>
            <form action="/registreer-dier" method="post" class="toevoegenform" enctype="multipart/form-data">
              <label for="foto">Foto*</label>
              <input type="file" name="foto" id="imageupload" required accept=".jpg, .jpeg, .png, .gif" multiple />
              <div class="registreerinput">
                <label for="diernaam">Naam - <span>verplicht</span></label>
                <input type="text" id="diernaam" name="diernaam" placeholder="naam" required>
              </div>

              <div class="registreerinput">
                <label for="diersoort">Soort - <span>verplicht</span></label>
                <input type="text" id="diersoort" name="diersoort" placeholder="soort" required>
              </div>

              <div class="registreerinput">
                <label for="dierleeftijd">Leeftijd - <span>verplicht</span></label>
                <input type="number" id="dierleeftijd" name="dierleeftijd" placeholder="leeftijd" required>
              </div>

              <div class="registreerinput">
                <label for="diergewicht">Gewicht - <span>verplicht</span></label>
                <input type="number" id="diergewicht" name="diergewicht" placeholder="gewicht" required>
              </div>

              <div class="registreerinput">
                <label for="diergeslacht">Geslacht - <span>verplicht</span></label>
                <select id="diergeslacht" name="diergeslacht" required>
                  <option value="man">Mannetje</option>
                  <option value="vrouw">Vrouwtje</option>
                </select>
              </div>

              <div class="registreerinput">
                <label for="dieromschrijving">Omschrijving</label>
                <textarea class="textareawrapper" name="dieromschrijving" id="dieromschrijving" cols="30" rows="10"></textarea>
              </div>

              <button class="btn" type="submit">Afstand doen</button>
            </form>
        </div>
      </div>

    </section>

  </main>
  <script src="script/script.js"></script>
</body>

